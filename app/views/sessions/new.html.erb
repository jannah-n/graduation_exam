<body class="login-page">
<header>
  <div class="header-container">
    <div class="logo">QUIZ-APP</div>
  </div>
</header>

<% if flash[:danger] %>
  <div class="alert alert-danger"><%= flash[:danger] %></div>
<% end %>

<div class="user-login">
<h1>ログイン</h1>
<%= form_with(url: login_path, local: true) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "メールアドレス", required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "パスワード", required: true %>
  </div>
  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>
</div>
</body>
